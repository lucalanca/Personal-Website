doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible",content="ie=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")
    link(rel="dns-prefetch" href="//ajax.googleapis.com")
    link(rel="dns-prefetch" href="//fonts.googleapis.com")
    link(rel="dns-prefetch" href="//fonts.gstatic.com")
    title= htmlWebpackPlugin.options.title
    style= require('../styles/index.scss')[0][1]
      
  body.o-layout
    
    | !{require('../pages/' + htmlWebpackPlugin.options.environment.partial + '.jade' )(htmlWebpackPlugin.options.environment)}
    
    include ../partials/footer.jade
    - var fontFamilies = []
    if htmlWebpackPlugin.options.environment.partial === 'index'
      - fontFamilies = ['Roboto+Mono:300']
    else
      - fontFamilies = ['Roboto+Mono:300,300italic,500,500italic', 'Roboto+Mono:300, Open+Sans:300,800' ]
      
    script.
      WebFontConfig = {
        google: { families: !{JSON.stringify(fontFamilies)} }
      };
      (function(d) {
        var wf = d.createElement('script'), s = d.scripts[0];
        wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js';
        s.parentNode.insertBefore(wf, s);
      })(document);

      
      
